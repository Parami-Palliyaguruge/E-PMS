<!-- Automate Use Case -->

<svg xmlns="http://www.w3.org/2000/svg" width="800" height="400" viewBox="0 0 800 400">
  <rect width="800" height="400" fill="#f9fbe7"/>
  <text x="400" y="200" font-family="Arial" font-size="32" text-anchor="middle" fill="#8bc34a">Automate Workflows</text>
  <rect x="200" y="250" width="400" height="50" rx="10" fill="#8bc34a" opacity="0.3"/>
  
  <!-- Flow automation illustration -->
  <rect x="200" y="120" width="80" height="40" rx="5" fill="#8bc34a"/>
  <text x="240" y="145" font-family="Arial" font-size="12" text-anchor="middle" fill="white">Start</text>
  
  <polygon points="290,140 310,130 310,150" fill="#8bc34a"/>
  <line x1="280" y1="140" x2="310" y2="140" stroke="#8bc34a" stroke-width="2"/>
  
  <rect x="320" y="120" width="80" height="40" rx="5" fill="#9ccc65"/>
  <text x="360" y="145" font-family="Arial" font-size="12" text-anchor="middle" fill="white">Process 1</text>
  
  <polygon points="410,140 430,130 430,150" fill="#9ccc65"/>
  <line x1="400" y1="140" x2="430" y2="140" stroke="#9ccc65" stroke-width="2"/>
  
  <rect x="440" y="120" width="80" height="40" rx="5" fill="#aed581"/>
  <text x="480" y="145" font-family="Arial" font-size="12" text-anchor="middle" fill="white">Process 2</text>
  
  <polygon points="530,140 550,130 550,150" fill="#aed581"/>
  <line x1="520" y1="140" x2="550" y2="140" stroke="#aed581" stroke-width="2"/>
  
  <rect x="560" y="120" width="80" height="40" rx="5" fill="#c5e1a5"/>
  <text x="600" y="145" font-family="Arial" font-size="12" text-anchor="middle" fill="white">End</text>
  
  <!-- Decision flow -->
  <line x1="360" y1="160" x2="360" y2="180" stroke="#9ccc65" stroke-width="2"/>
  <polygon points="360,180 350,170 370,170" fill="#9ccc65"/>
  
  <rect x="320" y="180" width="80" height="40" rx="5" fill="#9ccc65" opacity="0.7"/>
  <text x="360" y="205" font-family="Arial" font-size="12" text-anchor="middle" fill="white">Approve?</text>
  
  <line x1="320" y1="200" x2="300" y2="200" stroke="#9ccc65" stroke-width="2"/>
  <polygon points="300,200 310,190 310,210" fill="#9ccc65"/>
  <text x="290" y="185" font-family="Arial" font-size="10" text-anchor="middle" fill="#8bc34a">No</text>
  
  <line x1="300" y1="200" x2="240" y2="200" stroke="#9ccc65" stroke-width="2"/>
  <line x1="240" y1="200" x2="240" y2="170" stroke="#9ccc65" stroke-width="2"/>
  <polygon points="240,170 230,180 250,180" fill="#9ccc65"/>
</svg>
